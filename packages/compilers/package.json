{
    "name": "@tsx-air/compilers",
    "version": "1.0.4",
    "author": "Wix.com",
    "license": "MIT",
    "private": true,
    "main": "./src/index.ts",
    "scripts": {
        "build": "concurrently \"yarn build:cjs\" \"yarn build:esm\"",
        "build:cjs": "tsc -p tsconfig.build.json --module commonjs --outDir dist/cjs",
        "build:esm": "tsc -p tsconfig.build.json --module esnext --outDir dist/esm",
        "clean": "rimraf ./dist ./tmp",
        "lint": "tslint -c ../../tslint.json \"src/**/*.ts?(x)\"",
        "prebuild": "yarn clean",
        "test": "yarn unit && yarn integration",
        "unit": "mocha \"src/**/*.test.ts?(x)\" --exclude \"src/index.test.ts\"",
        "integration":  "mocha \"src/index.test.ts\""
    },
    "files": [
        "dist",
        "src"
    ],
    "devDependencies": {
        "@types/sinon": "^7.5.2",
        "sinon": "^9.0.0"
    }
}
