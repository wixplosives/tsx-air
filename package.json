{
  "name": "tsx-air",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn rimraf packages/*/tmp; yarn rimraf packages/*/.tmp; lerna run clean --stream",
    "build": "lerna run build --stream",
    "start": "yarn workspace @tsx-air/playground start --open",
    "lint": "lerna run lint",
    "pretest": "yarn typecheck && yarn lint",
    "test": "lerna run test --stream --concurrency 1",
    "tst": "lerna run test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "push": "yarn pretest && git diff --exit-code --cached && git diff --exit-code && git pull && git clean -fdx && yarn && git diff --exit-code && yarn test && yarn build && git push"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "tslib": "^1.10.0",
    "typescript": "^3.9.0"
  },
  "devDependencies": {
    "@ts-tools/build": "^1.2.1",
    "@ts-tools/node": "^1.1.2",
    "@ts-tools/webpack-loader": "^1.1.2",
    "@types/chai": "^4.2.4",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.0",
    "@types/pixelmatch": "^5.0.0",
    "@types/pngjs": "^3.4.0",
    "@types/prettier": "^1.19.0",
    "@types/puppeteer": "^2.0.0",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/rimraf": "^2.0.3",
    "@types/showdown": "^1.9.3",
    "@types/webpack": "^4.41.0",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "cpy-cli": "^3.0.0",
    "css-loader": "^3.2.0",
    "html-webpack-plugin": "^4.0.0-beta.11",
    "jsdom": "16.0.0",
    "lerna": "^3.18.3",
    "mocha": "7.0.0",
    "mocha-loader": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^5.1.0",
    "pngjs": "^3.4.0",
    "prettier": "^1.19.1",
    "puppeteer": "^2.0.0",
    "raw-loader": "^4.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.25.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "sirv-cli": "^0.4.5",
    "style-loader": "^1.1.0",
    "svelte": "^3.12.1",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-no-focused-test": "^0.5.0",
    "tslint-react": "^4.1.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
