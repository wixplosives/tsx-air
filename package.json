{
  "name": "tsx-air",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": ">=12.18.2"
  },
  "scripts": {
    "clean": "yarn rimraf packages/*/tmp; yarn rimraf packages/*/.tmp; lerna run clean --stream",
    "build": "lerna run build --stream",
    "start": "yarn workspace @tsx-air/playground start --open",
    "lint": "lerna run lint",
    "pretest": "yarn typecheck && yarn lint",
    "test": "lerna run test --stream --concurrency 1",
    "tst": "lerna run test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "push": "yarn pretest && git diff --exit-code --cached && git diff --exit-code && git pull && git clean -fdx && yarn && git diff --exit-code && yarn test && yarn build && git push",
    "licenses": "yarn legally --plain | grep \"[│├┌└]\" > licenses.txt"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@ts-tools/node": "^2.1.1",
    "@ts-tools/webpack-loader": "^2.1.1",
    "@types/chai": "^4.2.4",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.144",
    "@types/mime": "^2.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^13.1.0",
    "@types/pixelmatch": "^5.0.0",
    "@types/pngjs": "^3.4.0",
    "@types/prettier": "^1.19.0",
    "@types/puppeteer": "^3.0.2",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.2",
    "@types/rimraf": "^2.0.3",
    "@types/showdown": "^1.9.3",
    "@types/sinon": "^10.0.1",
    "@types/webpack": "^4.41.0",
    "chai": "^4.2.0",
    "concurrently": "^5.0.2",
    "cpy-cli": "^3.0.0",
    "css-loader": "^5.2.6",
    "html-webpack-plugin": "^4.5.1",
    "jsdom": "^16.2.2",
    "legally": "^3.5.8",
    "lerna": "^4.0.0",
    "lodash": "^4.17.21",
    "mocha": "^8.4.0",
    "npm-run-all": "^4.1.5",
    "pixelmatch": "^5.1.0",
    "pngjs": "^3.4.0",
    "prettier": "^1.19.1",
    "puppeteer": "^5.3.1",
    "raw-loader": "^4.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.50.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^5.1.2",
    "sinon": "^11.1.1",
    "sirv-cli": "^1.0.12",
    "style-loader": "^1.1.0",
    "svelte": "^3.38.2",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "tslib": "^2.2.0",
    "typescript": "~3.9.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
