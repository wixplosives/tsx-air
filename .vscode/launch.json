{
  
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },

        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Current",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "**/*.test.ts?(x)",
                "--timeout",
                "999999"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
