{
  
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test examples",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "packages/examples/**/*.test.ts?(x)",
                "--timeout",
                "999999"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DEBUG":"true"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test compilers",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "packages/compilers/**/*.test.ts?(x)",
                "--timeout",
                "999999"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DEBUG":"true"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "test build",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "packages/builder/**/*.test.ts?(x)",
                "--timeout",
                "999999"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DEBUG":"true"
            }
        }
    ]
}
